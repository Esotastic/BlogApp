<%include ./partials/header %>

<div class="ui main text container segment">
  <div class="ui huge header">
    Edit <%= blog.title %>
  </div>
  <form action="/blogs/<%=blog._id%>" method="put" class="ui form">
    <div class="field">
      <label>Title</label>
      <input type="text" name="blog[title]" value="<%=blog.title%>">
    </div>
    <div class="field">
      <label>Image URL</label>
      <input type="text" name="blog[image]" value="<%=blog.image%>">
    </div>
    <div class="field">
      <label>Post Body</label>
      <textarea name="blog[body]" rows="8" cols="80"><%=blog.body%></textarea>
    </div>
    <button class="positive ui button big" type="submit">Post</button>
  </form>
</div>

<%include ./partials/footer %>
