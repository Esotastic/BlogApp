<%include ./partials/header %>

<div class="ui main text container segment">
  <div class="ui huge header">
    Create New Post
  </div>
  <form action="/blogs" method="post" class="ui form">
    <div class="field">
      <label>Title</label>
      <input type="text" name="blog[title]" placeholder="Title">
    </div>
    <div class="field">
      <label>Image URL</label>
      <input type="text" name="blog[image]" placeholder="Image URL">
    </div>
    <div class="field">
      <label>Post Body</label>
      <textarea name="blog[body]" rows="8" cols="80"></textarea>
    </div>
    <button class="positive ui button big" type="submit">Post</button>
  </form>
</div>

<%include ./partials/footer %>
